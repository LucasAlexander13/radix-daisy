{
	"ts-node": {
		"compilerOptions": {
			"module": "commonjs"
		}
	},
	"compilerOptions": {
		"target": "es2017",
		"module": "esnext",
		"outDir": "lib",
		"baseUrl": ".",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"lib": ["es2017", "dom", "dom.iterable", "esnext"],
		"noEmitOnError": true,
		"noImplicitAny": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"allowJs": false,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"incremental": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"strict": true,
		"paths": {
			"@public/*": ["./*"],
			"@components/*": ["./source/components/*"],
			"@primitives/*": ["./source/primitives/*"],
			"@interfaces/*": ["./source/interfaces/*"],
		}
	},
	"include": [
		".next/types/**/*.ts",
		"next-env.d.ts",
		"**/*.d.ts",
		"**/*.tsx",
		"**/*.ts"
	],
	"exclude": ["node_modules", "**/*assert.tsx", "**/*assert.ts"]
}
